<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:background="@drawable/main">
    <ImageView
        android:id="@+id/play_game"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/play_game"/>
    <ImageButton
        android:id="@+id/Level_1_button"
        android:layout_below="@+id/play_game"
        android:background="@drawable/level_1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />
    <ImageButton
        android:id="@+id/Level_2_button"
        android:layout_below="@+id/Level_1_button"
        android:background="@drawable/level_2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />
    <ImageButton
        android:id="@+id/Level_3_button"
        android:layout_below="@+id/Level_2_button"
        android:background="@drawable/level_3"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />
    <ImageButton
        android:id="@+id/back_start"
        android:layout_below="@+id/Level_3_button"
        android:background="@drawable/back"
        android:layout_marginTop="20dp"
        android:layout_width="130px"
        android:layout_height="130px"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>